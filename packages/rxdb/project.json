{
  "name": "rxdb",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/rxdb/src",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/rxdb/ng-package.json",
        "tsConfig": "packages/rxdb/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/rxdb/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/rxdb/jest.config.ts",
        "tsConfig": "packages/rxdb/tsconfig.spec.json"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "tagPrefix": "v",
        "noVerify": true,
        "baseBranch": "master",
        "push": true,
        "syncVersions": false,
        "commitMessageFormat": "release(ngx-odm/rxdb): new version ${version}",
        "skipCommitTypes": ["docs", "ci"],
        "postTargets": ["rxdb:github"],
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "chore",
            "hidden": false
          },
          {
            "type": "docs",
            "hidden": false
          },
          {
            "type": "style",
            "hidden": false
          },
          {
            "type": "refactor",
            "section": "Features",
            "hidden": false
          },
          {
            "type": "perf",
            "section": "Features",
            "hidden": false
          },
          {
            "type": "test",
            "hidden": true
          },
          {
            "type": "build",
            "hidden": true
          }
        ]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    }
  }
}
