{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["dom", "es2020"],
    "types": ["node"]
  },
  "exclude": [
    "**/*.spec.ts",
    "test-setup.ts",
    "jest.config.ts",
    "**/*.test.ts",
    "**/*.mock.ts"
  ],
  "include": ["**/*.ts"]
}
