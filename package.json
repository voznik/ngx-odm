{
  "$schema": "https://json.schemastore.org/package",
  "engines": {
    "node": ">=12 <13"
  },
  "name": "ngx-odm",
  "description": "Angular ODMs for NoSql DBs like RxDB, Kinto",
  "author": {
    "name": "voznik",
    "url": "https://about.me/voznik"
  },
  "version": "2.0.0-alpha",
  "license": "MIT",
  "keywords": [
    "angular9",
    "angular10",
    "angular11",
    "rxjs",
    "rxdb",
    "nosql",
    "pouchdb",
    "typescript",
    "kinto",
    "replication"
  ],
  "scripts": {
    "nx": "./node_modules/.bin/nx",
    "ng-high-memory": "node --max_old_space_size=8192 ./node_modules/@angular/cli/bin/ng",
    "postinstall": "node ./decorate-angular-cli.js && npm run ngcc",
    "postbuild": "node ./tools/scripts/postbuild_replace.js",
    "ngcc": "ngcc --properties es2015 browser module main --first-only --create-ivy-entry-points",
    "start": "nx serve",
    "build:prod": "npm run ng-high-memory -- build --prod",
    "build:sourcemaps": "npm run ng-high-memory -- build --prod --sourceMap=true --statsJson",
    "test": "nx test",
    "test:ci": "npm run nx -- run-many --target=test --projects=web,shared-core,shared-ui --ci --run-in-band --parallel --pass-with-no-tests",
    "test:hook": "npm run affected:test -- --reporters='jest-junit' --parallel --pass-with-no-tests --base=develop --head=HEAD",
    "lint": "nx workspace-lint && ng lint",
    "lint:hook": "npm run affected:lint -- --parallel --base=develop --head=HEAD",
    "lint:uncommitted": "npm run affected:lint -- --parallel --fix --uncommitted",
    "e2e": "ng e2e",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "format": "nx format:write",
    "format:write": "nx format:write --base=master --head=HEAD && ng lint --fix",
    "format:check": "nx format:check --base=master --head=HEAD",
    "update": "ng update @nrwl/workspace",
    "workspace-schematic": "nx workspace-schematic",
    "dep-graph": "nx dep-graph",
    "help": "nx help"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^11.0.4",
    "@angular/common": "^11.0.4",
    "@angular/compiler": "^11.0.4",
    "@angular/core": "^11.0.4",
    "@angular/forms": "^11.0.4",
    "@angular/platform-browser": "^11.0.4",
    "@angular/platform-browser-dynamic": "^11.0.4",
    "@angular/router": "^11.0.4",
    "@angular/service-worker": "11.0.4",
    "@ng-toolkit/pwa": "^8.0.4",
    "@nrwl/angular": "11.0.13",
    "kinto": "^14.0.2",
    "kinto-http": "^5.1.1",
    "micro-dash": "^8.1.0",
    "normalize.css": "^8.0.1",
    "pouchdb-adapter-http": "^7.2.2",
    "pouchdb-adapter-idb": "^7.2.2",
    "pouchdb-adapter-memory": "^7.2.2",
    "reflect-metadata": "^0.1.13",
    "rxdb": "^9.11.0",
    "rxjs": "~6.6.2",
    "todomvc-app-css": "^2.3.0",
    "todomvc-common": "^1.0.5",
    "tslib": "^2.0.3",
    "zone.js": "^0.10.2"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^10.0.1",
    "@angular-devkit/build-angular": "^0.1100.2",
    "@angular-devkit/build-ng-packagr": "~0.1002.0",
    "@angular/cli": "~11.0.4",
    "@angular/compiler-cli": "^11.0.4",
    "@angular/language-service": "^11.0.4",
    "@babel/polyfill": "^7.12.1",
    "@compodoc/compodoc": "^1.1.11",
    "@ngxs/devtools-plugin": "^3.7.1",
    "@nrwl/jest": "^11.0.13",
    "@nrwl/tao": "11.0.13",
    "@nrwl/web": "^11.0.13",
    "@nrwl/workspace": "11.0.13",
    "@twittwer/compodoc": "^1.5.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "26.0.10",
    "@types/node": "^14.14.7",
    "@types/pouchdb-find": "6.3.6",
    "@types/pouchdb-http": "6.1.3",
    "@types/webpack": "^4.41.25",
    "buffer": "^6.0.3",
    "codelyzer": "^6.0.1",
    "document-register-element": "^1.14.10",
    "dotenv": "8.2.0",
    "dotenv-webpack": "^2.0.0",
    "eslint": "7.15.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "jest-localstorage-mock": "^2.4.3",
    "jest-preset-angular": "8.3.1",
    "lint-staged": "^10.5.1",
    "ng-packagr": "^11.0.3",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.0",
    "rxjs-tslint-rules": "^4.34.7",
    "source-map-explorer": "^2.5.0",
    "ts-jest": "26.4.0",
    "ts-node": "^8.10.2",
    "tsickle": "^0.39.1",
    "tslint": "~6.1.3",
    "tslint-angular": "^3.0.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~4.0.5",
    "typescript-tslint-plugin": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint:hook"
    }
  }
}
