{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "paths": {
      "@ngx-odm/rxdb": ["dist/packages/rxdb", "packages/rxdb/src/index.ts"],
      "@ngx-odm/rxdb/collection": [
        "dist/packages/rxdb/collection",
        "packages/rxdb/collection/src/index.ts"
      ],
      "@ngx-odm/rxdb/config": [
        "dist/packages/rxdb/config",
        "packages/rxdb/config/src/index.ts"
      ],
      "@ngx-odm/rxdb/core": ["dist/packages/rxdb/core", "packages/rxdb/core/src/index.ts"],
      "@ngx-odm/rxdb/testing": ["packages/rxdb/testing/src/index.ts"],
      "@ngx-odm/rxdb/utils": [
        "dist/packages/rxdb/utils",
        "packages/rxdb/utils/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
